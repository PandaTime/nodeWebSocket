doctype html
html
    head
        title Chat
        link(rel='stylesheet', href ='/css/style.css')
    body
        div(id='content')
            div(id='room')
            div(id='room-list')
            div(id='messages')
            form(id='send-form')
                input(id='send-message')
                input('send-buttom', type='submit', value='send')
            div(id='help') Chat commands:
            ul
                li Change nickname
                    code /nick [username]
                li Join/create room:
                    code /join [roomname]
    script(src='/socket.io/socket.io.js', type='text/javascript')
    script(src='http://code.jquery.com/jquery-1.8.0.min.js', type='text/javascript')
    script(src='/js/chat.js', type='text/javascript')
    script(src='/js/chat_ui.js', type='text/javascript')